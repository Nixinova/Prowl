@var full size = height: 100vh; width: 100vw;

* {
	box-sizing: border-box;
}

body {
	margin: 0;
	background: white;
	font-family: sans-serif;
}

.window {
	$(full size);
}

.centered {
	display: grid;
	place-content: center;
	place-items: center;
}

.clickable,
.draggable>.topbar {
	cursor: pointer;
}

.hide {display: none;}
